{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "strictNullChecks": false,
    "baseUrl": "./src",
    "outDir": "./dist",
    "lib": [
      "dom",
      "es6"
    ],
    "types": [
      "node",
      "jest"
    ]
  },
  "exclude": [
    "compiled",
    "examples",
    "dist",
    "lib",
    "node_modules",
    "src/**/*.test.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "angularCompilerOptions": {
    "genDir": "compiled"
  }
}